@model Idea.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h1 style="font-family: Arial, sans-serif; font-size: 1.5rem; color: #333;">Create</h1>

<h4 style="font-family: Arial, sans-serif; font-size: 1.25rem; color: #555;">Department</h4>
<hr style="border: 1px solid #ddd; margin: 10px 0;" />

<div style="max-width: 400px; margin-bottom: 20px;">
    <form asp-action="Create" style="display: flex; flex-direction: column;">
        <div asp-validation-summary="ModelOnly" style="color: #e74c3c; margin-bottom: 10px;"></div>
        
        <div style="margin-bottom: 15px;">
            <label asp-for="Name" style="font-weight: bold; color: #333; margin-bottom: 5px; display: block;"></label>
            <input asp-for="Name" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="Name" style="color: #e74c3c; font-size: 0.9rem;"></span>
        </div>
        
        <div style="text-align: right;">
            <input type="submit" value="Create" style="padding: 8px 16px; background-color: #009879; color: #ffffff; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem;" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" style="color: #009879; text-decoration: none; font-size: 1rem;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
