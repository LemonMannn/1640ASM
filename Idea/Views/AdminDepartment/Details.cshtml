@model Idea.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1 style="font-family: Arial, sans-serif; font-size: 1.5rem; color: #333;">Details</h1>

<div style="background-color: #f9f9f9; padding: 15px; border-radius: 5px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
    <h4 style="font-family: Arial, sans-serif; font-size: 1.25rem; color: #555;">Department</h4>
    <hr style="border: 1px solid #ddd; margin: 10px 0;" />
    
    <dl style="display: flex;">
        <dt style="flex: 0 0 100px; font-weight: bold; color: #333;">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd style="margin: 0; color: #666;">@Html.DisplayFor(model => model.Name)</dd>
    </dl>
</div>

<div style="margin-top: 20px;">
    <a asp-action="Edit" asp-route-id="@Model.Id" style="padding: 8px 16px; background-color: #009879; color: #ffffff; text-decoration: none; border-radius: 4px; margin-right: 10px;">Edit</a>
    <a asp-action="Index" style="color: #009879; text-decoration: none; font-size: 1rem;">Back to List</a>
</div>
