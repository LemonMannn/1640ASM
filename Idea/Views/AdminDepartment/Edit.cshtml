@model Idea.Models.Department

@{
    ViewData["Title"] = "Edit";
}

<h1 style="font-family: Arial, sans-serif; font-size: 1.5rem; color: #333;">Edit</h1>

<h4 style="color: #555;">Department</h4>
<hr style="border: 1px solid #ddd; margin: 10px 0;" />

<div style="background-color: #f9f9f9; padding: 15px; border-radius: 5px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group" style="margin-bottom:15px" >
                    <label asp-for="Name" class="control-label" style="font-weight: bold; color: #333;"></label>
                    <input asp-for="Name" class="form-control" style="padding: 10px; border-radius: 4px; border: 1px solid #ccc;" />
                    <span asp-validation-for="Name" class="text-danger" style="color: #e74c3c;"></span>
                </div>
                 <div style="text-align: right;">
            <input type="submit" value="Save" style="padding: 8px 16px; background-color: #009879; color: #ffffff; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem;" />
        </div>
            </form>
        </div>
    </div>
</div>

<div style="margin-top: 20px;">
    <a asp-action="Index" style="color: #009879; text-decoration: none; font-size: 1rem;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
