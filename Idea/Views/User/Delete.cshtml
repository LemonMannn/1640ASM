@model Idea.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<h1 style="font-family: Arial, sans-serif; font-size: 1.5rem; color: #333; text-align: center;">Delete User</h1>

<h3 style="font-family: Arial, sans-serif; font-size: 1.25rem; color: #555; text-align: center; margin-bottom: 20px;">Are you sure you want to delete this user?</h3>

<div style="background-color: #f9f9f9; padding: 20px; border-radius: 5px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); max-width: 800px; margin: auto;">
    <h4 style="color: #555;">User Details</h4>
    <hr style="border: 1px solid #ddd; margin: 10px 0;" />
    
    <dl class="row">
        <dt class="col-sm-3" style="font-weight: bold; color: #333;">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-9" style="color: #444;">
            @Html.DisplayFor(model => model.UserName)
        </dd>       
        <dt class="col-sm-3" style="font-weight: bold; color: #333;">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9" style="color: #444;">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete" style="text-align: center;">
        <input type="hidden" asp-for="Id" />
        
        <div>
            <input type="submit" value="Delete" 
                style="padding: 8px 16px; background-color: #e74c3c; color: #ffffff; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem; margin-right: 10px;" />
            <a asp-action="Index" 
                style="color: #009879; text-decoration: none; font-size: 1rem;">Back to List</a>
        </div>
    </form>
</div>
