@model IEnumerable<Idea.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Index";
}

<h1>Manage User</h1>

<p>
    <a href="@Url.Page("/Account/Register", new { area = "Identity" })" style="padding: 8px 12px; color: #ffffff; background-color: #009879; text-decoration: none; border-radius: 4px;">Create New</a>
</p>

<table style="width: 100%; border-collapse: collapse; margin: 25px 0; font-size: 1rem; font-family: Arial, sans-serif; min-width: 400px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <thead>
        <tr style="background-color: #009879; color: #ffffff; text-align: left;">
            <th style="padding: 12px 15px; border: 1px solid #ddd;">Username</th>
            <th style="padding: 12px 15px; border: 1px solid #ddd;">Full Name</th>
            <th style="padding: 12px 15px; border: 1px solid #ddd;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="border-bottom: 1px solid #dddddd;">
                <td style="padding: 12px 15px; border: 1px solid #ddd;">
                    <a href="@Url.Action("Details", new { id = item.Id })" style="text-decoration: none; color: #009879;">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </a>
                </td>
                <td style="padding: 12px 15px; border: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td style="padding: 12px 15px; border: 1px solid #ddd;">
                    @* <a href="@Url.Action("Edit", new { id = item.Id })" style="padding: 5px 10px; color: #ffffff; background-color: #009879; text-decoration: none; border-radius: 3px; margin-right: 5px;">Edit</a> *@
                    <a href="@Url.Action("Details", new { id = item.Id })" style="padding: 5px 10px; color: #ffffff; background-color: #009879; text-decoration: none; border-radius: 3px; margin-right: 5px;">Details</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" style="padding: 5px 10px; color: #ffffff; background-color: #e74c3c; text-decoration: none; border-radius: 3px;">Delete</a>
                    <a href="@Url.Action("AddRole", new { id = item.Id })" style="padding: 5px 10px; color: #ffffff; background-color: #007bff; text-decoration: none; border-radius: 3px; margin-left: 5px;">Add Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
